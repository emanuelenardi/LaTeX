% NOTE User defined Set
% #1 first number in the set - obbligatorio
% #2 last number in the set - facoltativo
\NewDocumentCommand{\uSet}{ m g }{%
	\ensuremath{%
		\IfNoValueTF{#2}{%
			% from #1_1 -> to #1_n
			\{{#1}_{1}, {#1}_{2}, \dots, {#1}_{n}\}%
		}{%
			% from #1 -> to #2
			\{#1, \dots, #2\}%
		}%
	}%
}

