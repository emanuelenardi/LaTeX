% NOTE impostazione GENERALI delle didascalie
\captionsetup{
	,figureposition = bottom
	,tableposition = top
	,font = small
	,labelfont = {sf, bf}
	,justification = centering
}

% NOTE impostazione delle didascalie NELLE FIGURE
\captionsetup[figure]{
	format=hang,
	justification=raggedright,
	singlelinecheck=off
}

\captionsetup[subfigure]{
	format=hang,
	justification=raggedright,
	singlelinecheck=off,
	position=b
}
